---
import HTMLContactForm from './ContactForm.html';
---
<section id="contact" class="py-[120px]">
  <div class="container">
    <div class="flex flex-wrap mx-[-16px]">
      <div class="w-full px-4">
        <div class="max-w-[600px] mx-auto text-center mb-[50px]">
          <span class="font-semibold text-lg text-primary block mb-2"> Contact With Me </span>
          <h2 class="font-bold text-black text-3xl sm:text-4xl md:text-[45px] mb-5">Have an Project in Mind?</h2>
        </div>
      </div>
    </div>
    <div class="flex justify-center -mx-4">
      <div class="w-full lg:w-9/12 px-4">
        <HTMLContactForm />
      </div>
    </div>
  </div>
</section>