---
import FormattedDate from '@components/FormattedDate.astro';
import PostTags from '@components/blog/Tags.astro';

const { post } = Astro.props;
const { title, description, pubDate, category, snippet, tags} = post.data;
const link = `/blog/${post.slug}/`;
---

<article class="w-full  px-6">

  <div class="flex w-full justify-start pl-8 sm:pl-11 lg:pl-0 lg:ml-5 relative pb-12">
    <span class="absolute top-1 left-0 lg:-left-11 w-4 h-4 rounded-full bg-white border-4 border-primary"></span>
      <div class="mr-6">
        <span class="inline-flex py-2 px-4 items-center rounded-full bg-primary text-white text-xs font-semibold mb-5">
          <FormattedDate date={post.data.pubDate} />
        </span>
      </div>

      <div class="flex flex-col display-block">
        <h3 class="font-semibold text-xl text-black mb-1">
          <a href={`/blog/${post.slug}/`}>
            {post.data.title}
          </a>
        </h3>
        <p class="font-medium mb-4 text-base text-body-color">{post.data.snippet}</p>
        <PostTags tags={post.data.tags} />
      </div>

  </div>
</article>
